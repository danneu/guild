{
  "engines": {
    "node": "0.11.x"
  },
  "scripts": {
    "start": "node --harmony --max_old_space_size=200 ./server",
    "start-dev": "env $(cat .env | xargs) nodemon --harmony --expose-gc ./server | bunyan",
    "start-sandbox": "env $(cat .env | xargs) node --harmony --expose-gc ./server/sandbox | bunyan",
    "start-sandbox-nodemon": "env $(cat .env | xargs) nodemon --harmony --expose-gc ./server/sandbox | bunyan",
    "reset-db": "env $(cat .env | xargs) node --harmony ./server/reset_db"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danneu/guild"
  },
  "dependencies": {
    "bcryptjs": "^2.1.0",
    "better-assert": "^1.0.2",
    "bunyan": "^1.2.3",
    "cheerio": "^0.18.0",
    "co": "^4.1.0",
    "co-fs": "^1.2.0",
    "co-parallel": "^1.0.0",
    "co-pg": "^1.3.1",
    "co-request": "^0.2.0",
    "debug": "^2.1.0",
    "koa": "^0.14.0",
    "koa-body": "^0.4.0",
    "koa-logger": "^1.2.2",
    "koa-methodoverride": "^0.3.1",
    "koa-route": "^2.4.0",
    "koa-router": "^3.8.0",
    "koa-static": "^1.4.8",
    "koa-validate": "^0.2.5",
    "koa-views": "^2.1.2",
    "lodash": "^2.4.1",
    "multiline": "^1.0.1",
    "newrelic": "^1.14.6",
    "node-uuid": "^1.4.2",
    "nodemailer": "^1.3.0",
    "nodemailer-ses-transport": "^1.2.0",
    "pg": "^4.1.1",
    "promissory": "^1.0.1",
    "regex-trie": "^1.0.4",
    "swig": "^1.4.2"
  },
  "devDependencies": {
    "gulp": "^3.8.10",
    "gulp-clean": "^0.3.1",
    "gulp-concat": "^2.4.3",
    "gulp-git": "^0.5.5",
    "gulp-minify-css": "^0.3.11",
    "gulp-rev": "^2.0.1",
    "gulp-uglify": "^1.0.2"
