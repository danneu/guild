{
  "name": "guild",
  "version": "0.0.28",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "tsc --noEmit",
    "build": "gulp && ls -lah dist",
    "start": "tsx ./server",
    "dev": "tsx watch ./server",
    "reset-db": "tsx ./server/reset_db.ts",
    "prettier": "prettier --write \"server/**/*.ts\"",
    "docker:build": "docker build -t guild .",
    "docker:run": "docker run -p 3000:3000 --env-file .env guild",
    "// ==================": "prod ==================================",
    "prod:deploy": "pnpm version patch -m '%s [deploy]' && git push origin --follow-tags",
    "prod:logs": "fly logs --app rpguild",
    "prod:ssh": "fly ssh console --app rpguild",
    "// ===================": "staging ==================================",
    "staging:deploy": "fly deploy --config fly.staging.toml --app rpguild-staging",
    "staging:logs": "fly logs --app rpguild-staging",
    "staging:ssh": "fly ssh console --app rpguild-staging"
  },
  "main": "server/index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/danneu/guild"
  },
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.830.0",
    "@aws-sdk/client-sesv2": "^3.830.0",
    "@aws-sdk/lib-storage": "^3.830.0",
    "@koa/etag": "^5.0.1",
    "@koa/router": "^13.1.0",
    "@ladjs/koa-better-static": "^3.0.0",
    "autolinker": "^4.1.5",
    "bcryptjs": "^3.0.2",
    "debug": "^4.4.1",
    "discord.js": "^14.20.0",
    "dotenv": "^16.5.0",
    "knex": "^3.1.0",
    "koa": "^3.0.0",
    "koa-body": "^6.0.1",
    "koa-bouncer": "^6.0.4",
    "koa-compress": "^5.1.1",
    "koa-conditional-get": "^3.0.0",
    "koa-logger": "^4.0.0",
    "koa-nunjucks-render": "2.0.1",
    "koa-send": "^5.0.1",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.21",
    "nodemailer": "^7.0.3",
    "nunjucks": "^3.2.4",
    "pg": "^8.16.0",
    "postgres-array": "3.0.4",
    "prettier": "^3.5.3",
    "promise.map": "^1.1.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "sharp": "^0.34.2",
    "simple-oauth2": "^5.1.0",
    "tsafe": "^1.8.5",
    "tsx": "^4.20.3",
    "uuid": "^11.1.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/debug": "^4.1.12",
    "@types/gulp": "^4.0.17",
    "@types/gulp-concat": "^0.0.37",
    "@types/gulp-rev": "^5.0.36",
    "@types/gulp-uglify": "^3.0.11",
    "@types/koa": "^2.15.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^24.0.3",
    "@types/nunjucks": "^3.2.6",
    "@types/pg": "^8.15.4",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
